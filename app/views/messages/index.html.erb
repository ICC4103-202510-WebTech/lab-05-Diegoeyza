<h1>Messages</h1>

<div style="margin-bottom: 20px;">
  <%= link_to 'New Message', new_message_path, class: 'btn btn-success' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Message ID</th>
      <th>User ID</th>
      <th>Chat ID</th>
      <th>Message</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.body %></td>
        <td>
        <%= link_to 'Open', message_path(message), class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
