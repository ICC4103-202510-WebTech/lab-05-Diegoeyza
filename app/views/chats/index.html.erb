<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">Chats</h1>
    <%= link_to 'New Chat', new_chat_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Chat ID</th>
        <th>Sender ID</th>
        <th>Receiver ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.id %></td>
          <td><%= chat.sender_id %></td>
          <td><%= chat.receiver_id %></td>
          <td>
            <%= link_to 'Open', chat_path(chat), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-outline-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
