<h1>Chats</h1>

<div style="margin-bottom: 20px;">
  <%= link_to 'New Chat', new_chat_path, class: 'btn btn-success' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td>
          <%= link_to 'Open', chat_path(chat), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
