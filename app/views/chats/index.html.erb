<h1>Chats</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>Sender ID</th>
      <th>Reciever ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= link_to 'Open', chat_path(chat), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
